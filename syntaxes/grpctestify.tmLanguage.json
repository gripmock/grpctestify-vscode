{
	"scopeName": "source.grpctestify",
	"patterns": [
	  { "include": "#comment" },
	  { "include": "#sections" }
	],
	"repository": {
	  "comment": {
	    "match": "\\s*#(.*)$",
	    "name": "comment.line.grpctestify"
	  },
	  "sections": {
		"patterns": [
		  { "include": "#comment" },
		  { "include": "#address-section" },
		  { "include": "#endpoint-section" },
		  { "include": "#request-section" },
		  { "include": "#response-section" },
		  { "include": "#error-section" }
		]
	  },
	  "address-section": {
		"begin": "^(---\\s+ADDRESS\\s+---)(.*)?$",
		"beginCaptures": { 
			"1": { "name": "keyword.section.name.grpctestify" },
			"2": { 
				"patterns": [
					{ "include": "#comment" }
				]
			 }
		 },
		"end": "(?=^--- [A-Z]+ ---|\\z)",
		"patterns": [
			{ "include": "#comment" },
		  	{ 
				"match": "^([\\w.-]+:\\d+)(\\s*#.*)?$", 
				"captures": {
					"1": { "name": "string.address.valid.grpctestify" },
					"2": {
						"patterns": [
							{ "include": "#comment" }
						]
					}
				}
			},
			{ "match": "^(?!\\s*$)(?!---).+", "name": "invalid.illegal.address.grpctestify" }
		]
	  },
	  "endpoint-section": {
		"begin": "^(---\\s+ENDPOINT\\s+---)(.*)?$",
		"beginCaptures": { 
			"1": { "name": "keyword.section.name.grpctestify" },
			"2": { 
				"patterns": [
					{ "include": "#comment" }
				]
			 }
		 },
		"end": "(?=^--- [A-Z]+ ---|\\z)",
		"patterns": [
			{ "include": "#comment" },
		    {
				"match": "^([\\w\\.]+\\.)([\\w]+)\\/([\\w\\.]+)(\\s*#.*)?$",
				"captures": {
					"1": { "name": "entity.package.grpctestify" },  
					"2": { "name": "entity.service.grpctestify" },  
					"3": { "name": "entity.method.grpctestify" },
					"4": { "name": "comment.line.grpctestify" },
					"5": {
						"patterns": [
							{ "include": "#comment" }
						]
					}
				}
			},
			{ "match": "^(?!\\s*$)(?!---).+", "name": "invalid.illegal.endpoint.grpctestify" }
		]
	  },
	  "request-section": {
		"begin": "^(---\\s+REQUEST\\s+---)(.*)?$",
		"beginCaptures": { 
			"1": { "name": "keyword.section.name.grpctestify" },
			"2": { 
				"patterns": [
					{ "include": "#comment" }
				]
			 }
		 },
		"end": "(?=^--- [A-Z]+ ---|\\z)",
		"patterns": [
			{ "include": "#comment" },
			{ "include": "source.json" }
		]
	  },
	  "response-section": {
		"begin": "^(---\\s+RESPONSE\\s+---)(.*)?$",
		"beginCaptures": { 
			"1": { "name": "keyword.section.name.grpctestify" },
			"2": { 
				"patterns": [
					{ "include": "#comment" }
				]
			 }
		 },
		"end": "(?=^--- [A-Z]+ ---|\\z)",
		"patterns": [
			{ "include": "#comment" },
			{ "include": "source.json" }
		]
	  },
	  "error-section": {
		"begin": "^(---\\s+ERROR\\s+---)(.*)?$",
		"beginCaptures": { 
			"1": { "name": "keyword.section.name.grpctestify" },
			"2": { 
				"patterns": [
					{ "include": "#comment" }
				]
			 }
		 },
		"end": "(?=^--- [A-Z]+ ---|\\z)",
		"patterns": [
			{ "include": "#comment" },
			{ "include": "source.json" }
		]
	  }
	}
  }