{
  "comments": {
    "lineComment": "#"
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"]
  ],
  "autoClosingPairs": [
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "'", "close": "'" },
    { "open": "\"", "close": "\"" }
  ],
  "surroundingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["'", "'"],
    ["\"", "\""]
  ],
  "indentationRules": {
    "increaseIndentPattern": "^\\s*(\\{.*|\\[.*|\\().*$",
    "decreaseIndentPattern": "^\\s*(\\}|\\]|\\)).*$"
  },
  "folding": {
    "markers": {
      "start": "^\\s*---\\s*(ADDRESS|ENDPOINT|REQUEST|RESPONSE|ERROR)\\s*---",
      "end": "(?=^---\\s*(ADDRESS|ENDPOINT|REQUEST|RESPONSE|ERROR)\\s*---|\\z)"
    }
  }
}